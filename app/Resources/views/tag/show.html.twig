{% extends 'base.html.twig' %}

{% block body %}
<section class="main_content">
    <h2>Tag</h2>

    <table>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Tag Name</th>
                <td>{{ tag.tagName }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ tag.status }}</td>
            </tr>
            <tr>
                <th>No of Votes</th>
                <td>{{ tag.noOfVotes }}</td>
            </tr>
    </table>
    <h3>References with {{ tag.tagName }} tag</h3>
    <table>
        <tr>
           <td>{% for tagReference in tag.tagReferences %}
                           <li>
                               <a href="{{ path('reference_show', {
                                   'id': tagReference.id
                               }) }}">
                                   {{ tagReference.nameOfAuthor }}
                               </a>
                           </li>
             {% endfor %}</td>
        </tr>
    </table>

    <ul>
        <li>
            <a href="{{ path('tag_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tag_edit', { 'id': tag.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</section>
{% endblock %}
