{% extends 'base.html.twig' %}

{% block body %}
<section class="main_content">
    <h2>Tag</h2>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Tag Name</th>
                <td>{{ tag.tagName }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ tag.status }}</td>
            </tr>
            <tr>
                <th>No of Votes</th>
                <td>{{ tag.noOfVotes }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tag_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tag_edit', { 'id': tag.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</section>
{% endblock %}
